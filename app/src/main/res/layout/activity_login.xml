<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/color_black"
    >

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:src="@mipmap/chacha"
            android:id="@+id/iv_close"/>

        <ImageView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:src="@mipmap/logo"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_logo"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_mobile"
            android:drawablePadding="10dp"
            android:hint="您的手机号"
            android:inputType="phone"
            android:textColorHint="@color/color_white"
            app:met_baseColor="@color/color_white"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/color_black"
            app:met_underlineColor="@color/color_black"
            />

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/met_mobile"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/color_white"/>

        <RelativeLayout
            android:id="@+id/rl_"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/v"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/tv_vcode_get"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/tv_vcode_get"
                android:background="@color/color_white"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_vcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/view"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_vcode"
                android:drawablePadding="10dp"
                android:hint="验证码"
                android:inputType="number"
                android:textColorHint="@color/color_white"
                app:met_baseColor="@color/color_white"
                app:met_floatingLabel="normal"
                app:met_primaryColor="@color/color_black"
                app:met_textColorHint="#6a6a6b"
                app:met_underlineColor="@color/color_black"
                />
        </RelativeLayout>


        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/color_white"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v2"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/color_white"
            app:met_baseColor="@color/color_white"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/color_black"
            app:met_underlineColor="@color/color_black"
            />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_password"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/color_white"/>




        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_inviteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v3"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@mipmap/lgputyqm"
            android:drawablePadding="10dp"
            android:hint="邀请码"
            android:textColorHint="@color/color_white"
            app:met_baseColor="@color/color_white"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/color_black"
            app:met_underlineColor="@color/color_black"
            />

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_inviteCode"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/color_white"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v4"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_btn"
            android:text="注册"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

    </RelativeLayout>
</ScrollView>