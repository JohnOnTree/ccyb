<?xml version="1.0" encoding="utf-8"?>
<live.cnaidai.com.ccyb.view.SlipScollerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <live.cnaidai.com.ccyb.view.ImageCycleView
            android:id="@+id/icv_home"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="杭州"
            android:textColor="@color/color_white"
            android:layout_margin="20dp"
            android:id="@+id/tv_city"/>

        <live.cnaidai.com.ccyb.weight.refreshlayout.BGARefreshLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icv_home"
            android:id="@+id/ref_layout"
            >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        </live.cnaidai.com.ccyb.weight.refreshlayout.BGARefreshLayout>

    </RelativeLayout>
</live.cnaidai.com.ccyb.view.SlipScollerView>